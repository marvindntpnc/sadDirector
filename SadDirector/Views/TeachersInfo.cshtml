                        foreach (var degree in Model.TeachersDegrees)
                        {
                            var isSelected = ((int)teacherModel.TeacherDegree).ToString()==degree.Value?"selected":"";
                        @:<option @isSelected value="@degree.Value">@degree.Text</option>
                        }
                        }
                    </select>
                </div>
