                    <div class="row align-items-center teacher-info-row">
                        <div class="col-md-4 teacher-info-label">
                            <label for="newTeachersClassroom">Кабинет</label>
                        </div>
                        <div class="col-md-8 new-teacher-info-input">
                            <select type="text" class="form-select" id="newTeachersClassroom">
                                @{
                                    foreach (var classroom in Model.TeachersClassroom)
                                    {
                                        <option value="@classroom.Value">@classroom.Text</option>
                                    }
                                }
                            </select>
