@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SadDirector.Domain.TeacherInfo.enums
@model SadDirector.Models.Lists.TeacherListModel
<header>
    <h1>Учителя</h1>
</header>
<div class="card">
<div class="container">
