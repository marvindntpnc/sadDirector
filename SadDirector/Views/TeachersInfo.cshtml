                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentSubjects-@teacherModel.Id">@teacherModel.TeacherSubjectList</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <select class="form-select teachers-multiple-select" id="teachersSubjects-@teacherModel.Id" data-placeholder="Choose anything" multiple>
                        @{
                        foreach (var subject in Model.TeachersSubjects)
                        {
                            var isSelected = "";
                            if (teacherModel.SubjectIds.Any(ts=>ts==int.Parse(subject.Value)))
                            {
                                isSelected = "selected";
                            }
                        @: <option @isSelected value="@subject.Value">@subject.Text</option>
                        }
                        }
                    </select>
                </div>
            </div>
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersClass-@teacherModel.Id">Классное руководство</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentClass-@teacherModel.Id">@teacherStudyClass</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <select type="text" class="form-select" id="teachersClass-@teacherModel.Id">
                        @{
                            foreach (var studyClass in Model.TeachersStudyClasses)
                            {
                                var isSelected = teacherModel.StudyClassId== int.Parse(studyClass.Value) ? "selected" : "";
                                var isAvailable = Model.TeacherList.Any(t => t.StudyClassId == int.Parse(studyClass.Value) &&
                                                                             teacherModel.StudyClassId != int.Parse(studyClass.Value))
                                    ? "disabled"
                                    : "";
                                @: <option @isSelected @isAvailable value="@studyClass.Value">@studyClass.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersClassroom-@teacherModel.Id">Кабинет</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentClassroom-@teacherModel.Id">@teacherClassroom</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <select type="text" class="form-select" id="teachersClassroom-@teacherModel.Id">
                        @{
                            foreach (var classroom in Model.TeachersClassroom)
                            {
                                var isSelected = teacherModel.ClassroomId.ToString() == classroom.Value ? "selected" : "";
                                @:<option @isSelected value="@classroom.Value">@classroom.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
