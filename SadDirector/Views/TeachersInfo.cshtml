            </div>
        </div>
    </div>
</div>
    @{
    foreach (var teacherModel in Model.TeacherList)
    {
        string degreeName = string.Empty;
        switch (teacherModel.TeacherDegree)
        {
            case TeacherDegree.Director:
                degreeName = "Директор";
                break;
            case TeacherDegree.Methodist:
                degreeName = "Методист";
                break;
        }

        string categoryName = string.Empty;
        switch (teacherModel.TeacherCategory)
        {
            case TeacherCategory.First:
                categoryName = "Первая";
                break;
            case TeacherCategory.Higher:
                categoryName = "Высшая";
                break;
            case TeacherCategory.Specialist:
                categoryName = "Специалист";
                break;
        }
            
        string educationName = string.Empty;
        switch (teacherModel.TeacherEducation)
        {
            case TeacherEducation.Bachelor:
                educationName = "Бакалавр";
                break;
            case TeacherEducation.MediumSpecial:
                educationName = "Среднее-специальное";
                break;
            case TeacherEducation.Higher:
                educationName = "Высшее";
                break;
        }
        
        string teacherStudyClass=Model.TeachersStudyClasses.FirstOrDefault(tsc=>tsc.Value==teacherModel.StudyClassId.ToString())?.Text??"";
        
        string teacherClassroom=Model.TeachersClassroom.FirstOrDefault(tc=>tc.Value==teacherModel.ClassroomId.ToString())?.Text??"";
        
            
        var teacherName = $"{teacherModel.Surname} {teacherModel.Name} {teacherModel.SecondName}";
        var accordionItemId = $"teacher{teacherModel.Id}";
        <div class="accordion-item teacher-accordion-item" id="@accordionItemId">
        <h2 class="accordion-header" id="teacher-info-@teacherModel.Id">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#teacher-full-info-@teacherModel.Id" aria-expanded="false" aria-controls="teacher-full-info-@teacherModel.Id">
                @teacherName
            </button>
        </h2>
        <div id="teacher-full-info-@teacherModel.Id" class="accordion-collapse collapse" aria-labelledby="teacher-info-@teacherModel.Id" data-bs-parent="#TeacherAccordion">
        <div class="accordion-body">
        <div class="row">
        <div class="col-md-6">
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersSurname-@teacherModel.Id">Фимилия</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentSurname-@teacherModel.Id">@teacherModel.Surname</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <input type="text" value="@teacherModel.Surname" class="form-control" id="teachersSurname-@teacherModel.Id">
                </div>
            </div>
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersName-@teacherModel.Id">Имя</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentName-@teacherModel.Id">@teacherModel.Name</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <input type="text" value="@teacherModel.Name" class="form-control" id="teachersName-@teacherModel.Id">
                </div>
            </div>
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersSecondName-@teacherModel.Id">Отчество</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentSecondName-@teacherModel.Id">@teacherModel.SecondName</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <input type="text" value="@teacherModel.SecondName" class="form-control" id="teachersSecondName-@teacherModel.Id">
                </div>
            </div>
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersEducation-@teacherModel.Id">Образование</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentEducation-@teacherModel.Id">@educationName</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <select type="text" class="form-select" id="teachersEducation-@teacherModel.Id">
                        @{
                            foreach (var educationLevel in Model.TeachersEducationLevels)
                            {
                                var isSelected = ((int)teacherModel.TeacherEducation).ToString()==educationLevel.Value?"selected":"";
                        @:<option @isSelected value="@educationLevel.Value">@educationLevel.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersCategory-@teacherModel.Id">Категория</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentCategory-@teacherModel.Id">@categoryName</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <select type="text" class="form-select" id="teachersCategory-@teacherModel.Id">
                        @{
                        foreach (var category in Model.TeachersCategory)
                        {
                            var isSelected = ((int)teacherModel.TeacherCategory).ToString()==category.Value?"selected":"";
                        @:<option @isSelected value="@category.Value">@category.Text</option>
                        }
                        }
                    </select>
                </div>
            </div>
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersTariffCategory-@teacherModel.Id">Тарифный разряд</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentTariffCategory-@teacherModel.Id">@teacherModel.TariffCategory</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
                    <select type="text" class="form-select" id="teachersTariffCategory-@teacherModel.Id">
                        @{
                        foreach (var tariffCategory in Model.TeachersTariffCategory)
                        {
                            var isSelected = teacherModel.TariffCategory.ToString()==tariffCategory.Value?"selected":"";
                        @: <option @isSelected value="@tariffCategory.Value">@tariffCategory.Text</option>
                        }
                        }
                    </select>
                </div>
            </div>
            <div class="row align-items-center teacher-info-row">
                <div class="col-md-4 teacher-info-label">
                    <label for="teachersExperienceFrom-@teacherModel.Id">Начало карьеры</label>
                </div>
                <div class="col-md-8 teacher-current-info-@teacherModel.Id">
                    <p id="teachersCurrentExperienceFrom-@teacherModel.Id">@teacherModel.ExperienceFrom.ToString("dd.MM.yyyy")</p>
                </div>
                <div class="col-md-8 teacher-info-input-@teacherModel.Id hide">
