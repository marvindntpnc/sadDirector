                <div class="col-md-8 teacher-info-label">
                    <label for="newTeacherSportClub">Спортклуб</label>
                </div>

                <div class="col-md-4 teacher-info-input-1">
                    <input type="checkbox" class="form-check-input" id="newTeacherSportClub">
                </div>
            </div>
            <div class="row align-items-center editSaveButtonsBlock">
                <div class="col-md-6" id="saveNewTeacherInfo" style="text-align: end">
